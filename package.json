{
  "name": "@goldyjs/strong-together-shared",
  "version": "1.0.2",
  "LICENSE": "MIT",
  "description": "Shared Biz Logic For Strong Together",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/goldy-js/strong-together-shared",
  "author": "Adam Goldman <goldy@adamgoldman.me>",
  "repository": {
    "type": "git",
    "url": "https://github.com/goldy-js/strong-together-shared.git"
  },
  "bugs": {
    "url": "https://github.com/goldy-js/strong-together-shared/issues",
    "email": "goldy@adamgoldman.me"
  },
  "scripts": {
    "tsc": "tsc",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "lint": "eslint src",
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "build:watch": "nodemon --watch package.json --watch src --watch '@types' --exec \"npm run build\"",
    "build": "npm run build:js && npm run build:types",
    "build:js": "babel src -d lib --source-maps --extensions '.ts'",
    "build:types": "tsc --emitDeclarationOnly",
    "prepub": "npm run build",
    "pub": "npm publish --access public",
    "test": "jest --runInBand",
    "t:w": "npm run test:w",
    "test:w": "npm run test -- --watch",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run type-check"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "keywords": [
    "goldy",
    "natives"
  ],
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.17.2",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^28.1.3",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-cli": "^7.0.0-beta.3",
    "babel-jest": "^27.5.1",
    "babel-plugin-inline-json-import": "^0.3.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.3.8",
    "jest": "^28.1.1",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@goldyjs/natives": "^1.1.0",
    "@goldyjs/shared": "^1.1.0"
  }
}
